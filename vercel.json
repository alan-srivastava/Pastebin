{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/healthz",
      "dest": "/api/healthz.js"
    },
    {
      "src": "/api/pastes/([a-zA-Z0-9_-]+)$",
      "dest": "/api/pastes/[id].js?id=$1"
    },
    {
      "src": "/api/pastes/?$",
      "dest": "/api/pastes/index.js"
    },
    {
      "src": "/p/([a-zA-Z0-9_-]+)$",
      "dest": "/api/p/[id].js?id=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
